<resources>

    <!-- Base application theme.
    <style name="AppTheme" parent="Base.Theme.Design"></style>-->

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primaryColorDark</item>
        <item name="colorPrimaryDark">@color/primaryColor</item>
        <item name="colorAccent">@color/primaryPink</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
    </style>

    <style name="EditTextTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorControlNormal">@color/primaryColor</item>
        <item name="colorControlActivated">@color/primaryColor</item>
        <item name="colorControlHighlight">@color/primaryColor</item>
    </style>

    <style name="preferenceTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/primaryColorDark</item>
        <item name="colorPrimaryDark">@color/primaryColor</item>
        <item name="colorAccent">@color/primaryPink</item>
    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.Dialog.Alert">
    <item name="android:windowNoTitle">true</item>
    </style>


    <!--Fonts-->
    <style name="sandstoneBold" parent="AppTheme">
        <item name="android:fontFamily">@font/sandstone_bold</item>
    </style>
    <style name="Title" parent="sandstoneBold">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="ToolbarTitle" parent="sandstoneBold">
        <item name="android:textSize">17sp</item>
        <item name="android:fontFamily">@font/sandstone_bold</item>
        <item name="android:textStyle">bold</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="Subtitle1" parent="sandstoneBold">
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">0.038</item>
        <item name="android:textColor">#6a000000</item>
    </style>

    <style name="Subtitle2" parent="sandstoneBold">
        <item name="android:fontFamily">@font/sandstone_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">0.035</item>
        <item name="android:lineSpacingExtra">4dp</item>
    </style>

    <style name="EditTextStyle" parent="sandstoneBold">
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0.17</item>
        <item name="android:textStyle">bold</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="Button" parent="sandstoneBold">
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:textStyle">bold</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="Body1" parent="sandstoneBold">
        <item name="android:fontFamily">@font/sandstone_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0.0625</item>
        <item name="android:textColor">@android:color/black</item>
    </style>
    <style name="Body2" parent="Body1">
        <item name="android:letterSpacing">0.0625</item>
        <item name="android:textSize">13sp</item>
    </style>

    <!--for nav drawer-->
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="DrawerArrowStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>


</resources>
