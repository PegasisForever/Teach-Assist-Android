<resources>

    <!-- Base application theme. -->
    <style name="Theme.Design" parent="Base.Theme.Design"></style>

    <style name="Base.Theme.Design" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/AverageBarColor</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="windowActionBarOverlay">false</item>
    </style>

    <style name="Roboto_Mono" parent="@android:style/TextAppearance.Small">
        <item name="android:fontFamily">@font/roboto_mono</item>
    </style>

    <style name="Roboto" parent="@android:style/TextAppearance.Small">
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <style name="Theme.Design.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Design.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>
