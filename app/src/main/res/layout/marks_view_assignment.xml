<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<RelativeLayout

    android:id="@+id/relativeLayout_marks_view"
    android:layout_weight="1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/button_bg_rectangle_solid_marks_view"
    android:minHeight="@dimen/Row_Height"
    android:layout_gravity="top"
    android:elevation="3dp"
    android:layout_marginTop="10dp"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginBottom="4dp"
    >

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginRight="18dp"
        android:paddingLeft="@dimen/album_title_padding"
        android:paddingTop="@dimen/album_title_padding"
        android:textColor="@android:color/darker_gray"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/AveragePercent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/roboto_light"
        android:paddingLeft="8dp"
        android:textColor="@android:color/black"
        android:textSize="50sp"
        android:textStyle="bold" />

    <RelativeLayout
        android:id="@+id/mark_bars"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="25dp"
        android:layout_marginRight="25dp"
        android:paddingBottom="10dp">

        <View
            android:id="@+id/BarGraph1"
            android:layout_width="30dp"
            android:layout_height="44.6dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="30dp"
            android:background="@drawable/rounded_rectangle_bar_graph" />

        <TextView
            android:id="@+id/K"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/BarGraph1"
            android:layout_alignStart="@+id/BarGraph1"
            android:paddingLeft="10dp"
            android:text="K" />

        <TextView
            android:id="@+id/Kpercent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/BarGraph1"
            android:layout_alignTop="@+id/BarGraph1"
            android:paddingLeft="2dp"
            android:text="66.9" />

        <View
            android:id="@+id/BarGraph2"
            android:layout_width="30dp"
            android:layout_height="58dp"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="3dp"
            android:layout_toRightOf="@+id/BarGraph1"
            android:background="@drawable/rounded_rectangle_bar_graph" />

        <TextView
            android:id="@+id/T"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/BarGraph2"
            android:layout_alignStart="@+id/BarGraph2"
            android:paddingLeft="10dp"
            android:text="T" />

        <TextView
            android:id="@+id/Tpercent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/BarGraph2"
            android:layout_alignTop="@+id/BarGraph2"
            android:paddingLeft="2dp"
            android:text="87.0" />

        <View
            android:id="@+id/BarGraph3"
            android:layout_width="30dp"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="3dp"
            android:layout_toRightOf="@+id/BarGraph2"
            android:background="@drawable/rounded_rectangle_bar_graph" />

        <TextView
            android:id="@+id/C"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/BarGraph3"
            android:layout_alignStart="@+id/BarGraph3"
            android:paddingLeft="10dp"
            android:text="C" />

        <TextView
            android:id="@+id/Cpercent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/BarGraph3"
            android:layout_alignTop="@+id/BarGraph3"
            android:paddingLeft="2dp"
            android:text="90.0" />

        <View
            android:id="@+id/BarGraph4"
            android:layout_width="30dp"
            android:layout_height="38dp"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="3dp"
            android:layout_toRightOf="@+id/BarGraph3"
            android:background="@drawable/rounded_rectangle_bar_graph" />

        <TextView
            android:id="@+id/A"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/BarGraph4"
            android:layout_alignStart="@+id/BarGraph4"
            android:paddingLeft="10dp"
            android:text="A" />

        <TextView
            android:id="@+id/Apercent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/BarGraph4"
            android:layout_alignTop="@+id/BarGraph4"
            android:paddingLeft="2dp"
            android:text="57.0" />
    </RelativeLayout>

</RelativeLayout>
</RelativeLayout>