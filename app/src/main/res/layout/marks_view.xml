<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">


    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
    <androidx.core.widget.NestedScrollView

    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:background="@color/Background"
    android:theme="@android:style/Theme.Black.NoTitleBar"
    android:fillViewport="true">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:backgroundTint="@color/Background"
        android:id="@+id/LinearLayoutMarksView"
        android:gravity="top"
        >


        <!--Average-->
        <RelativeLayout

            android:id="@+id/relativeLayoutAverage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:background="@color/Background"
            android:paddingStart="50dp"
            android:paddingEnd="50dp"
            tools:context=".Average">


            <io.netopen.hotbitmapgg.library.view.RingProgressBar
                android:id="@+id/AverageBar"
                android:layout_centerInParent="true"
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:minHeight="170dp"
                app:max="101"
                app:ringColor="@color/primaryColorDark"
                app:ringDiameter="170"
                app:ringProgressColor="@color/primaryPink"
                app:ringWidth="5dp"
                app:style="STROKE"
                app:textColor="@color/primaryColor"
                app:textIsShow="false"
                app:textSize="26sp" />


            <TextView
                android:id="@+id/AverageInt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                style="@style/Subtitle1"
                android:text=""
                android:textColor="@color/textColor"
                android:textSize="22sp"
                android:textStyle="bold" />


        </RelativeLayout>



        <RelativeLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="140dp">
            <RelativeLayout
                android:id="@+id/mark_bars"
                android:layout_width="wrap_content"
                android:layout_height="120dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true">

                <RelativeLayout
                    android:id="@+id/BarAverage1"
                    android:layout_width="45dp"
                    android:layout_height="80dp"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/rounded_rectangle_bar_graph"
                    android:layout_above="@+id/weightKAverage">
                <TextView
                    android:id="@+id/KpercentAverage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentTop="true"
                    android:textColor="@color/textColor"
                    style="@style/Body2"
                    android:text="" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:textColor="@color/textColor"
                        style="@style/Subtitle2"
                        android:text="K" />

                </RelativeLayout>


                <TextView
                    android:id="@+id/weightKAverage"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_alignStart="@id/BarAverage1"
                    android:layout_alignEnd="@+id/BarAverage1"
                    android:textAlignment="center"
                    android:text="W:"
                    android:textColor="@color/textColor"
                    android:layout_alignParentBottom="true"
                    style="@style/Body2"

                    />

                <RelativeLayout
                    android:id="@+id/BarAverage2"
                    android:layout_width="45dp"
                    android:layout_height="80dp"
                    android:layout_above="@+id/weightTAverage"
                    android:layout_marginStart="3dp"
                    android:layout_toRightOf="@+id/BarAverage1"
                    android:background="@drawable/rounded_rectangle_bar_graph" >
                    <TextView
                        android:id="@+id/TpercentAverage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:textColor="@color/textColor"
                        style="@style/Body2"
                        android:text="" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:textColor="@color/textColor"
                        style="@style/Subtitle2"
                        android:text="T" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/weightTAverage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@id/BarAverage2"
                    android:layout_alignEnd="@+id/BarAverage2"
                    android:textAlignment="center"
                    android:text="W:"
                    android:textColor="@color/textColor"
                    android:layout_alignParentBottom="true"
                    style="@style/Body2"

                    />

                <RelativeLayout
                    android:id="@+id/BarAverage3"
                    android:layout_width="45dp"
                    android:layout_height="80dp"
                    android:layout_above="@+id/weightCAverage"
                    android:layout_marginStart="3dp"
                    android:layout_toRightOf="@+id/BarAverage2"
                    android:background="@drawable/rounded_rectangle_bar_graph" >
                    <TextView
                        android:id="@+id/CpercentAverage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:textColor="@color/textColor"
                        style="@style/Body2"
                        android:text="" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:textColor="@color/textColor"
                        style="@style/Subtitle2"
                        android:text="C" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/weightCAverage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@id/BarAverage3"
                    android:layout_alignEnd="@+id/BarAverage3"
                    android:textAlignment="center"
                    android:text="W:"
                    android:textColor="@color/textColor"
                    android:layout_alignParentBottom="true"
                    style="@style/Body2"

                    />

                <RelativeLayout
                    android:id="@+id/BarAverage4"
                    android:layout_width="45dp"
                    android:layout_height="80dp"
                    android:layout_above="@+id/weightAAverage"
                    android:layout_marginStart="3dp"
                    android:layout_toRightOf="@+id/BarAverage3"

                    android:background="@drawable/rounded_rectangle_bar_graph" >
                    <TextView
                        android:id="@+id/ApercentAverage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:textColor="@color/textColor"
                        style="@style/Body2"
                        android:text="" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:textColor="@color/textColor"
                        style="@style/Subtitle2"
                        android:text="A" />
                </RelativeLayout>
                <TextView
                    android:id="@+id/weightAAverage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@id/BarAverage4"
                    android:layout_alignEnd="@+id/BarAverage4"
                    android:textAlignment="center"
                    android:text="W:"
                    android:textColor="@color/textColor"
                    android:layout_alignParentBottom="true"
                    style="@style/Body2"

                    />

                <RelativeLayout
                    android:id="@+id/BarAverage5"
                    android:layout_width="45dp"
                    android:layout_height="80dp"
                    android:layout_above="@+id/weightOAverage"
                    android:layout_marginStart="3dp"
                    android:layout_toRightOf="@+id/BarAverage4"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/rounded_rectangle_bar_graph" >
                    <TextView
                        android:id="@+id/OpercentAverage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:textColor="@color/textColor"
                        style="@style/Body2"
                        android:text="" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:textColor="@color/textColor"
                        style="@style/Subtitle2"
                        android:text="O" />
                </RelativeLayout>





                <TextView
                    android:id="@+id/weightOAverage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@id/BarAverage5"
                    android:layout_alignEnd="@+id/BarAverage5"
                    android:textAlignment="center"
                    android:text="W:"
                    android:textColor="@color/textColor"
                    android:layout_alignParentBottom="true"
                    style="@style/Body2"

                    />
            </RelativeLayout>
        </RelativeLayout>


    </LinearLayout>
</androidx.core.widget.NestedScrollView>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        >
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/Toolbar_Height"
            android:background="@color/primaryColorDark"
            android:elevation="10dp"
            android:minHeight="@dimen/Toolbar_Height"
            android:uiOptions="splitActionBarWhenNarrow"
            app:layout_scrollFlags="scroll|enterAlways">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/toolbar_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    style="@style/ToolbarTitle"/>
            </RelativeLayout>
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>