<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/Toolbar_Height"
        android:background="?toolbarColor"
        android:elevation="2dp"
        android:minHeight="@dimen/Toolbar_Height"
        android:uiOptions="splitActionBarWhenNarrow"
        app:layout_scrollFlags="scroll|enterAlways">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/toolbar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                style="@style/ToolbarTitle"
                android:textColor="?textColor"
                android:paddingEnd="16dp"/>
        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>


    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
    <androidx.core.widget.NestedScrollView

    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:background="?Background"
    android:fillViewport="true">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:backgroundTint="?Background"
        android:gravity="top"
        >
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:backgroundTint="?Background"
            android:id="@+id/LinearLayoutMarksView"
            android:gravity="top"
            >


        <!--Average-->
        <RelativeLayout

            android:id="@+id/relativeLayoutAverage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:background="?Background"
            android:paddingStart="50dp"
            android:paddingEnd="50dp"
            tools:context=".Average">


            <io.netopen.hotbitmapgg.library.view.RingProgressBar
                android:id="@+id/AverageBar"
                android:layout_centerInParent="true"
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:minHeight="170dp"
                app:max="101"
                app:ringColor="?primaryColorDark"
                app:ringDiameter="170"
                app:ringProgressColor="?primaryPink"
                app:ringWidth="5dp"
                app:style="STROKE"
                app:textColor="?primaryColor"
                app:textIsShow="false"
                app:textSize="26sp" />


            <TextView
                android:id="@+id/AverageInt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                style="@style/Subtitle1"
                android:text=""
                android:textColor="?textColor"
                android:textSize="22sp"
                android:textStyle="bold" />


        </RelativeLayout>



        <RelativeLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="140dp">
            <RelativeLayout
                android:id="@+id/mark_bars"
                android:layout_width="wrap_content"
                android:layout_height="120dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true">

                <RelativeLayout
                    android:id="@+id/BarAverage1"
                    android:layout_width="45dp"
                    android:layout_height="80dp"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/rounded_rectangle_bar_graph"
                    android:layout_above="@+id/weightKAverage">
                <TextView
                    android:id="@+id/KpercentAverage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentTop="true"
                    android:textColor="?textColor"
                    style="@style/Body2"
                    android:text="" />
                    <TextView
                        android:id="@+id/K"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:textColor="?textColor"
                        style="@style/Subtitle2"
                        android:text="K" />

                </RelativeLayout>


                <TextView
                    android:id="@+id/weightKAverage"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_alignStart="@id/BarAverage1"
                    android:layout_alignEnd="@+id/BarAverage1"
                    android:textAlignment="center"
                    android:text="W:"
                    android:textColor="?textColor"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="2dp"
                    style="@style/Body2"

                    />

                <RelativeLayout
                    android:id="@+id/BarAverage2"
                    android:layout_width="45dp"
                    android:layout_height="80dp"
                    android:layout_above="@+id/weightTAverage"
                    android:layout_marginStart="3dp"
                    android:layout_toRightOf="@+id/BarAverage1"
                    android:background="@drawable/rounded_rectangle_bar_graph" >
                    <TextView
                        android:id="@+id/TpercentAverage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:textColor="?textColor"
                        style="@style/Body2"
                        android:text="" />
                    <TextView
                        android:id="@+id/T"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:textColor="?textColor"
                        style="@style/Subtitle2"
                        android:text="T" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/weightTAverage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@id/BarAverage2"
                    android:layout_alignEnd="@+id/BarAverage2"
                    android:textAlignment="center"
                    android:text="W:"
                    android:textColor="?textColor"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="2dp"
                    style="@style/Body2"

                    />

                <RelativeLayout
                    android:id="@+id/BarAverage3"
                    android:layout_width="45dp"
                    android:layout_height="80dp"
                    android:layout_above="@+id/weightCAverage"
                    android:layout_marginStart="3dp"
                    android:layout_toRightOf="@+id/BarAverage2"
                    android:background="@drawable/rounded_rectangle_bar_graph" >
                    <TextView
                        android:id="@+id/CpercentAverage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:textColor="?textColor"
                        style="@style/Body2"
                        android:text="" />
                    <TextView
                        android:id="@+id/C"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:textColor="?textColor"
                        style="@style/Subtitle2"
                        android:text="C" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/weightCAverage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@id/BarAverage3"
                    android:layout_alignEnd="@+id/BarAverage3"
                    android:textAlignment="center"
                    android:text="W:"
                    android:textColor="?textColor"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="2dp"
                    style="@style/Body2"

                    />

                <RelativeLayout
                    android:id="@+id/BarAverage4"
                    android:layout_width="45dp"
                    android:layout_height="80dp"
                    android:layout_above="@+id/weightAAverage"
                    android:layout_marginStart="3dp"
                    android:layout_toRightOf="@+id/BarAverage3"

                    android:background="@drawable/rounded_rectangle_bar_graph" >
                    <TextView
                        android:id="@+id/ApercentAverage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:textColor="?textColor"
                        style="@style/Body2"
                        android:text="" />
                    <TextView
                        android:id="@+id/A"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:textColor="?textColor"
                        style="@style/Subtitle2"
                        android:text="A" />

                </RelativeLayout>

                <TextView
                    android:id="@+id/weightAAverage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@id/BarAverage4"
                    android:layout_alignEnd="@+id/BarAverage4"
                    android:textAlignment="center"
                    android:text="W:"
                    android:textColor="?textColor"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="2dp"
                    style="@style/Body2"

                    />

                <RelativeLayout
                    android:id="@+id/BarAverage5"
                    android:layout_width="45dp"
                    android:layout_height="80dp"
                    android:layout_above="@+id/weightOAverage"
                    android:layout_marginStart="3dp"
                    android:layout_toRightOf="@+id/BarAverage4"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/rounded_rectangle_bar_graph" >
                    <TextView
                        android:id="@+id/OpercentAverage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:textColor="?textColor"
                        style="@style/Body2"
                        android:text="" />
                    <TextView
                        android:id="@+id/O"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:textColor="?textColor"
                        style="@style/Subtitle2"
                        android:text="O" />
                </RelativeLayout>


                <TextView
                    android:id="@+id/weightOAverage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@id/BarAverage5"
                    android:layout_alignEnd="@+id/BarAverage5"
                    android:textAlignment="center"
                    android:text="W:"
                    android:textColor="?textColor"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="2dp"
                    style="@style/Body2"

                    />
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>
        <RelativeLayout
            android:id="@+id/addAssignmentButton"
            android:layout_width="match_parent"
            android:layout_height="145dp"
            android:background="@drawable/button_bg_rectangle_solid_marks_view"
            android:layout_marginTop="3dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:visibility="invisible"
            >
            <RelativeLayout
                android:id="@+id/plusIconRL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginTop="40dp"
                android:layout_centerHorizontal="true">
            <ImageView
                android:id="@+id/plusIcon"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:src="@drawable/plus_icon"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Calculate New Assignment Mark"
                android:layout_centerHorizontal="true"
                android:layout_above="@+id/plusIcon"
                android:layout_marginBottom="5dp"
                android:textColor="?textColor"
                style="@style/Subtitle1"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/addAssignmentAllButtonsRL"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
                <TextView
                    android:id="@+id/addAssignmentTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="30dp"
                    android:text="Calculate New Assignment Mark"
                    android:textColor="?textColor"
                    style="@style/Subtitle1"
                    />
                <EditText
                    android:id="@+id/addAssignmentTitleET"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/addAssignmentTitle"
                    android:layout_marginStart="40dp"
                    android:layout_marginEnd="40dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp"
                    android:textColor="?textColor"
                    android:background="@drawable/flush_rounded_courner"
                    android:hint="Assignment Title"
                    android:textCursorDrawable="@null"
                    android:padding="10dp"
                    android:textColorHint="?primaryColor"
                    style="@style/Body1"
                    />
                <TextView
                    android:id="@+id/addAssignmentOverallMarkTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/addAssignmentTitleET"
                    android:layout_alignStart="@id/addAssignmentTitleET"
                    android:layout_marginTop="10dp"
                    android:text="Overall Mark"
                    android:textColor="?textColor"
                    style="@style/Subtitle2"/>
                <EditText
                    android:id="@+id/addAssignmentOverallMarkET"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/addAssignmentOverallMarkTV"
                    android:layout_marginTop="10dp"
                    android:layout_alignStart="@+id/addAssignmentOverallMarkTV"
                    android:textColor="?textColor"
                    android:background="@drawable/flush_rounded_courner"
                    android:hint="Mark"
                    android:textCursorDrawable="@null"
                    android:padding="10dp"
                    android:textColorHint="?primaryColor"
                    style="@style/Body1"
                    />
                <EditText
                    android:id="@+id/addAssignmentOverallWeightET"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/addAssignmentOverallMarkTV"
                    android:layout_marginTop="10dp"
                    android:layout_toEndOf="@+id/addAssignmentOverallMarkET"
                    android:layout_marginStart="30dp"
                    android:textColor="?textColor"
                    android:background="@drawable/flush_rounded_courner"
                    android:hint="Weight"
                    android:textCursorDrawable="@null"
                    android:padding="10dp"
                    android:textColorHint="?primaryColor"
                    style="@style/Body1"
                    />
                <View
                    android:id="@+id/addAssignmentDividerView"
                    android:layout_width="wrap_content"
                    android:layout_height="2dp"
                    android:layout_alignStart="@+id/addAssignmentTitleET"
                    android:layout_alignEnd="@+id/addAssignmentTitleET"
                    android:layout_below="@+id/addAssignmentOverallMarkET"
                    android:layout_marginTop="10dp"
                    android:background="?primaryColorDark"
                    />

                <TextView
                    android:id="@+id/addAssignmentAdvancedModeTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/addAssignmentDividerView"
                    android:paddingEnd="30dp"
                    android:layout_marginTop="20dp"
                    android:layout_alignStart="@+id/addAssignmentDividerView"
                    android:textColor="?textColor"
                    style="@style/Subtitle2"
                    android:text="Advanced Mode"/>
                <ImageView
                    android:id="@+id/addAssignmentAdvancedModeDropdownButton"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_marginTop="18dp"
                    android:layout_alignEnd="@+id/addAssignmentAdvancedModeTV"
                    android:layout_below="@+id/addAssignmentDividerView"
                    android:src="@drawable/arrow_up"
                    />


                <RelativeLayout
                    android:id="@+id/addAssignmentAdvancedModeRL"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/addAssignmentDividerView"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@+id/addAssignmentAdvancedModeTV"
                    android:visibility="gone">
                    <EditText
                        android:id="@+id/addAssignmentKMarkET"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="20dp"
                        android:layout_alignParentStart="true"
                        android:textColor="?textColor"
                        android:background="@drawable/flush_rounded_courner"
                        android:hint="Mark"
                        android:textCursorDrawable="@null"
                        android:padding="10dp"
                        android:textColorHint="?primaryColor"
                        style="@style/Body1"
                        />
                    <EditText
                        android:id="@+id/addAssignmentKWeightET"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="20dp"
                        android:layout_toEndOf="@+id/addAssignmentKMarkET"
                        android:layout_marginStart="30dp"
                        android:textColor="?textColor"
                        android:background="@drawable/flush_rounded_courner"
                        android:hint="Weight"
                        android:textCursorDrawable="@null"
                        android:padding="10dp"
                        android:textColorHint="?primaryColor"
                        style="@style/Body1"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:text="(Knowledge)"
                        android:textColor="?textColor"
                        style="@style/Body2"
                        android:layout_toEndOf="@+id/addAssignmentKWeightET"
                        android:layout_alignBaseline="@+id/addAssignmentKWeightET"/>
                    <EditText
                        android:id="@+id/addAssignmentTMarkET"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/addAssignmentKMarkET"
                        android:layout_marginTop="10dp"
                        android:layout_alignParentStart="true"
                        android:textColor="?textColor"
                        android:background="@drawable/flush_rounded_courner"
                        android:hint="Mark"
                        android:textCursorDrawable="@null"
                        android:padding="10dp"
                        android:textColorHint="?primaryColor"
                        style="@style/Body1"
                        />
                    <EditText
                        android:id="@+id/addAssignmentTWeightET"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/addAssignmentKMarkET"
                        android:layout_marginTop="10dp"
                        android:layout_toEndOf="@+id/addAssignmentTMarkET"
                        android:layout_marginStart="30dp"
                        android:textColor="?textColor"
                        android:background="@drawable/flush_rounded_courner"
                        android:hint="Weight"
                        android:textCursorDrawable="@null"
                        android:padding="10dp"
                        android:textColorHint="?primaryColor"
                        style="@style/Body1"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:text="(Thinking)"
                        android:textColor="?textColor"
                        style="@style/Body2"
                        android:layout_toEndOf="@+id/addAssignmentTWeightET"
                        android:layout_alignBaseline="@+id/addAssignmentTWeightET"/>
                    <EditText
                        android:id="@+id/addAssignmentCMarkET"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/addAssignmentTMarkET"
                        android:layout_marginTop="10dp"
                        android:layout_alignParentStart="true"
                        android:textColor="?textColor"
                        android:background="@drawable/flush_rounded_courner"
                        android:hint="Mark"
                        android:textCursorDrawable="@null"
                        android:padding="10dp"
                        android:textColorHint="?primaryColor"
                        style="@style/Body1"
                        />
                    <EditText
                        android:id="@+id/addAssignmentCWeightET"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/addAssignmentTMarkET"
                        android:layout_marginTop="10dp"
                        android:layout_toEndOf="@+id/addAssignmentCMarkET"
                        android:layout_marginStart="30dp"
                        android:textColor="?textColor"
                        android:background="@drawable/flush_rounded_courner"
                        android:hint="Weight"
                        android:textCursorDrawable="@null"
                        android:padding="10dp"
                        android:textColorHint="?primaryColor"
                        style="@style/Body1"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:text="(Communication)"
                        android:textColor="?textColor"
                        style="@style/Body2"
                        android:layout_toEndOf="@+id/addAssignmentCWeightET"
                        android:layout_alignBaseline="@+id/addAssignmentCWeightET"/>
                    <EditText
                        android:id="@+id/addAssignmentAMarkET"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/addAssignmentCMarkET"
                        android:layout_marginTop="10dp"
                        android:layout_alignParentStart="true"
                        android:textColor="?textColor"
                        android:background="@drawable/flush_rounded_courner"
                        android:hint="Mark"
                        android:textCursorDrawable="@null"
                        android:padding="10dp"
                        android:textColorHint="?primaryColor"
                        style="@style/Body1"
                        />
                    <EditText
                        android:id="@+id/addAssignmentAWeightET"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/addAssignmentCMarkET"
                        android:layout_marginTop="10dp"
                        android:layout_toEndOf="@+id/addAssignmentAMarkET"
                        android:layout_marginStart="30dp"
                        android:textColor="?textColor"
                        android:background="@drawable/flush_rounded_courner"
                        android:hint="Weight"
                        android:textCursorDrawable="@null"
                        android:padding="10dp"
                        android:textColorHint="?primaryColor"
                        style="@style/Body1"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:text="(Application)"
                        android:textColor="?textColor"
                        style="@style/Body2"
                        android:layout_toEndOf="@+id/addAssignmentAWeightET"
                        android:layout_alignBaseline="@+id/addAssignmentAWeightET"/>
                    <EditText
                        android:id="@+id/addAssignmentOMarkET"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/addAssignmentAMarkET"
                        android:layout_marginTop="10dp"
                        android:layout_alignParentStart="true"
                        android:textColor="?textColor"
                        android:background="@drawable/flush_rounded_courner"
                        android:hint="Mark"
                        android:textCursorDrawable="@null"
                        android:padding="10dp"
                        android:textColorHint="?primaryColor"
                        style="@style/Body1"
                        />
                    <EditText
                        android:id="@+id/addAssignmentOWeightET"
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/addAssignmentAMarkET"
                        android:layout_marginTop="10dp"
                        android:layout_toEndOf="@+id/addAssignmentOMarkET"
                        android:layout_marginStart="30dp"
                        android:textColor="?textColor"
                        android:background="@drawable/flush_rounded_courner"
                        android:hint="Weight"
